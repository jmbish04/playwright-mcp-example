{
  "name": "playwright-mcp-example",
  "version": "0.0.1-next",
  "description": "Cloudflare Playwright Tools for MCP - Template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudflare/playwright-mcp.git"
  },
  "homepage": "https://github.com/cloudflare/playwright-mcp",
  "engines": {
    "node": ">=18"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "wrangler types && tsc",
    "generate-types": "wrangler types",
    "deploy": "npm run db:migrate && wrangler deploy",
    "commit:gh": "git add -A && git commit -m \"chore: routine update\" && git push",
    "test": "./test.sh",
    "dev": "wrangler dev --local",
    "db:create": "wrangler d1 create playwright-test-db",
    "db:migrate": "wrangler d1 migrations apply playwright-test-db"
  },
  "dependencies": {
    "@cloudflare/playwright-mcp": "^0.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "typescript": "^5.8.2",
    "wrangler": "^4.42.0"
  }
}
